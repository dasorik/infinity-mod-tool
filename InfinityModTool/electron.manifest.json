{
  "executable": "InfinityModTool",
  "splashscreen": {
    "imageFile": "wwwroot/img/logo.png"
  },
  "name": "InfinityModTool",
  "author": "Dasorik",
  "singleInstance": false,
  "build": {
    "appId": "com.infinitymodtool.app",
    "productName": "InfinityModTool",
    "copyright": "Copyright Â© 2020",
    "buildVersion": "0.0.3",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": ["**/*"]
      },
      "**/*"
    ]
  }
}