<div>
    <div class="popup-container">
        <div class="popup-dialog">
            @if (ShowIcon)
            {
                <div class="popup-icon">
                    <img src="img/@GetAlertIcon()" />
                </div>
            }
            @if (!string.IsNullOrEmpty(Title))
            {
                <div class="popup-title">
                    @Title
                </div>
            }
            <div class="popup-message">
                @Message
            </div>
            <div class="popup-buttons">
                <button type="button" class="btn btn-primary" @onclick="OnDismissed">Ok</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = null;
    [Parameter] public string Message { get; set; } = "[Insert Alert Message]";
    [Parameter] public string OkText { get; set; } = "Ok";
    [Parameter] public bool ShowIcon { get; set; } = true;
    [Parameter] public AlertLevel Type { get; set; }
    [Parameter] public EventCallback OnDismissed { get; set; }

    private string GetAlertIcon()
    {
        switch (Type)
        {
            case AlertLevel.Info:
                return "alert-info.svg";
            case AlertLevel.Warning:
                return "alert-warning.svg";
            default:
                return "alert-info.svg";
        }
    }
}